{
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "migrate:analyze": "node scripts/migration-assistant.js analyze",
    "migrate:context": "node scripts/migration-assistant.js migrate-context",
    "migrate:classes": "node scripts/migration-assistant.js convert-classes",
    "migrate:memo": "node scripts/migration-assistant.js add-memo",
    "migrate:structure": "node scripts/migration-assistant.js atomic-structure",
    "migrate:full": "node scripts/migration-assistant.js full",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:deps": "npx depcheck",
    "analyze:size": "npm run build && npx bundlesize",
    "perf:lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:build-size": "npm run build && du -sh dist/",
    "pre-commit": "npm run lint:fix && npm run format && npm run type-check",
    "pre-push": "npm run test && npm run build",
    "docs:generate": "npx typedoc src/",
    "docs:serve": "npx http-server docs/",
    "clean": "rm -rf dist node_modules/.cache",
    "fresh-install": "rm -rf node_modules package-lock.json && npm install",
    "update-deps": "npx npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.29",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/ui": "^3.1.4",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@types/react": "^19.1.6",
    "@types/react-redux": "^7.1.34",
    "axios": "^1.9.0",
    "react": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1"
  }
}
